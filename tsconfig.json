{
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": [
        "node_modules",
        "**/node_modules/*",
        "build/**/*",
        "dist/**/*",
        "**/tests/**/*",
        "**/*.test.ts",
        "**/*.spec.ts"
    ],
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./build",
        "incremental": true,
        "esModuleInterop": true,
        "allowJs": true,
        "checkJs": false,
        "noEmitOnError": false,
        "forceConsistentCasingInFileNames": false,
        "strict": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
        "noImplicitReturns": false,
        "noFallthroughCasesInSwitch": false,
        "resolveJsonModule": true,
        "typeRoots": ["src/types", "node_modules/@types"],
        "types": ["node"],
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"],
            "@/infra/*": ["./infra/*"],
            "@/modules/*": ["./modules/*"],
            "@/core/*": ["./core/*"]
        }
    }
}
